{
  "name": "Workboard",
  "settings": {
    "apiPrefix": "workboard",
    "databaseSchema": "workboard"
  },
  "model": {
    "Developer": {
      "properties": {
        "Name": {
          "typeName": "string",
          "size": 100
        }
      }
    },
    "Card": {
      "properties": {
        "Name": {
          "typeName": "string",
          "size": 100
        },
        "Description": "string",
        "Owners": {
          "typeName": "List<Developer>",
          "withMany": true
        },
        "Priority": "CardPriority",
        "EstimatedPoints": {
          "typeName": "decimal",
          "dbType": "decimal(3, 2)"
        },
        "State": "CardState"
      }
    },
    "Board": {
      "properties": {
        "Name": {
          "typeName": "string",
          "size": 100
        },
        "Columns": "List<Column>"
      }
    },
    "Column": {
      "properties": {
        "Name": {
          "typeName": "string",
          "size": 100
        },
        "CardState": "CardState",
        "Order": "int"
      },
      "isRoot": false
    }
  },
  "enums": {
    "CardState": {
      "values": [ "NotStarted", "InProgress", "Done", "Accepted", "Declined" ]
    },
    "CardPriority": {
      "values": [ "Low", "Medium", "High" ]
    }
  }
}
